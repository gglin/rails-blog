<p id="notice"><%= notice %></p>


<p>
  <b>Author:</b>
  <%= link_to @post.author.name, author_path(@post.author_id) %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Posted at:</b>
  <%= @post.created_at %>
</p>

<p>
  <%= @post.paragraphize.html_safe %>
</p>

<br><br>

<table>
<% @post.comments.each do |comment| %>
  <tr>
    <td colspan="100%"><%= comment.paragraphize.html_safe %></td>
  <tr>
  <tr>
    <td>
     &nbsp; - <%= comment.author.name %> 
    </td>
  </tr>
  <tr>
    <td>
    <%= comment.created_at %>
    | <%= link_to 'Edit Comment', edit_post_comment_path(@post, comment) %>
    | <%= link_to 'Delete Comment', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <tr><td>&nbsp;</td></tr>
<% end %>
</table>

<br><br>
<%= link_to 'Post New Comment', new_post_comment_path(@post.id) %>
