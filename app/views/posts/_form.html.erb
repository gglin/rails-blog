<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label  :author %> (<%= link_to 'Create New', new_author_path %>)
    <%= f.collection_select :author_id, Author.all.sort_by {|i| i.name.downcase}, :id, :name, {include_blank: 'select an Author', selected: @selected_author} %>
  </div>

  <div class="control-group">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="control-group">
    <%= f.label :content %><br />
    <%= f.text_area :content, {cols: 80, rows: 100} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
