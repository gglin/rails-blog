<h1>Listing authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User Name</th>
    <th># Posts</th>
    <th># Comments</th>
    <th></th>
    <th></th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%= link_to author.name, author %></td>
    <td><%= link_to author.username, author %></td>
    <td><%= author.posts.size %></td>
    <td><%= author.comments.size %></td>
    <td><%= link_to 'Edit', edit_author_path(author) %></td>
    <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

