<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @author.name %>
</p>
<p>
  <b>User Name:</b>
  <%= @author.username %>
</p>

<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
<br><br>

<h2>All Posts</h2>
<table>
<% @author.posts.each_with_index do |post, index| %>
  <tr>
    <td valign="top"><h3><%= link_to index+1, post %></h3></td>
    <td colspan="100%"><%= post.preview.html_safe %></td>
  <tr>
  <tr>
    <td></td>
    <td> 
      <%= link_to 'Edit Post', edit_post_path(post) %>
    | <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>


<h2>All Comments</h2>
<table>
<% @author.comments.each_with_index do |comment, index| %>
  <tr>
    <td valign="top"><h3><%= link_to index+1, comment %></h3></td>
    <td colspan="100%"><%= comment.preview.html_safe %></td>
  <tr>
  <tr>
    <td></td>
    <td>
      <%= link_to 'Edit Comment', edit_post_comment_path(comment.post, comment) %>
    | <%= link_to 'Delete Comment', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br><br>